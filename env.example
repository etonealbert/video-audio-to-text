# Backend selection (whisperx or openai)
TRANSCRIPTION_BACKEND=whisperx

# OpenAI API settings (required only when using openai backend)
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxx
OPENAI_MODEL=gpt-4o-mini-transcribe
OPENAI_FALLBACK_MODEL=whisper-1

# WhisperX settings (used when backend=whisperx)
WHISPERX_MODEL=large-v3
WHISPERX_DEVICE=auto
WHISPERX_COMPUTE_TYPE=auto
WHISPERX_BATCH_SIZE=16
ENABLE_ALIGNMENT=true
ENABLE_DIARIZATION=false

# Hugging Face token (required only for speaker diarization)
HF_TOKEN=hf_xxxxxxxxxxxxxxxxxxxxxxxx

# Audio processing defaults
DEFAULT_BITRATE=128k
DEFAULT_MAX_CHUNK_MB=24
DEFAULT_MIN_SILENCE_MS=400
DEFAULT_SILENCE_THRESHOLD=-40
DEFAULT_CONCURRENCY=1
